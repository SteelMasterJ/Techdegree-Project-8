extends ../layout

block content
  h2 Update book: #{title}
  include validationErrors
  form(action="/books/" + book.id, method="post")
    include form
    p: input(type="submit", value="Update Book")
  form(action="/books/" + book.id + "/delete", method="post" onsubmit="return confirm('Do you really want to delete this book?');")
    p: input(type="submit", value="Delete Book")
    p: a(href="/books") Back to Library